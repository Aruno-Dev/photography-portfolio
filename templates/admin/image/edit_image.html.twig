{% extends 'base.html.twig' %}

{% block title %}Arnaud TERRET | Dashboard{% endblock %}

{% block body %}

{% include 'includes/sidebar.html.twig' %}

    <main role="main">
        <div class="container mt-5">
          <h1 class="h1 text-center">Editing image</h1>
          <div class="row mt-5">
            <div class="col">     
              {{ include('admin/image/forms/_edit_form.html.twig', {'submitButtonText': 'update'})}}
            </div>
          </div>
        </div>
         <div class="container mt-5">
          <h1 class="h1 text-center">Associated comments</h1>
          <div class="row mt-5">
            <div class="container text-center mx-auto">
              <div class="row">
              <table class="table table-hover">
                <thead class="thead-dark text-center">
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Author</th>
                    <th scope="col">Email</th>
                    <th scope="col">PostedAt</th>
                    <th scope="col">Content</th>
                    <th scope="col">Options</th>
                  </tr>
                </thead>
                <tbody>

                {% for comment in image.comments %}

                  <tr>
                    <th scope="row">{{comment.id}}</th>
                    <td>{{comment.author}}</td>
                    <td><a href="mailto:{{comment.email}}">{{comment.email}}</a></td>
                    <td>{{comment.postedAt|date('d/m/Y  H:i', 'Europe/Paris')}}</td>
                    <td>{{comment.content}}</td>
                    <td>
                        <form  action="{{ path('admin_image_comment_delete', { 'id': comment.id }) }}" method="post">
                          <input type="hidden" name="_token" value="{{ csrf_token('secure_delete') }}"/>
                          <button class="btn btn-danger m-1" type="submit" onclick="return confirm('Are you sure ?');" >Delete</button>
                        </form>
                    </td>
                  </tr>

                  {% endfor %}

                </tbody>
              </table>
              </div>
            </div>        
          </div>
        </div>
    </main> 
 

{% endblock %}