{% extends 'admin_base.html.twig' %}

{% block title %}Arnaud TERRET | Dashboard{% endblock %}

{% block body %}

<main class="wrapper light-wrapper">
    <h1 id="header-title">{{controller}}</h1>
    <div class="container">
        <h1 class="h1 text-center">Editing image</h1>
        <div class="row">
            <div class="col">     
              {{ include('admin/image/forms/_edit_form.html.twig', {'submitButtonText': 'update'})}}
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <h1 class="h1 text-center">Associated comments</h1>
        <div class="row mt-5">
            <div class="container text-center mx-auto">
                <div class="row" id="refresh_image_comments">
                    <table class="table table-hover">
                        <thead class="thead-dark text-center">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Author</th>
                                <th scope="col">Email</th>
                                <th scope="col">PostedAt</th>
                                <th scope="col">Content</th>
                                <th scope="col">Options</th>
                            </tr>
                          </thead>
                          <tbody>

                          {% for comment in image.comments %}

                            <tr>
                                <th scope="row">{{comment.id}}</th>
                                <td>{{comment.author}}</td>
                                <td><a href="mailto:{{comment.email}}">{{comment.email}}</a></td>
                                <td>{{comment.postedAt|date('d/m/Y  H:i', 'Europe/Paris')}}</td>
                                <td>{{comment.content}}</td>
                                <td>
                                    <button class="btn btn-red m-1" type="button" onclick="deleteImageComment('{{ comment.id }}')" >Delete</button>
                                </td>
                            </tr>

                          {% endfor %}

                         </tbody>
                      </table>
                  </div>
              </div>        
          </div>
    </div>
</main> 

{% endblock %}