{% extends 'admin_base.html.twig' %}

{% block title %}Arnaud TERRET | Dashboard{% endblock %}

{% block body %}

<main class="wrapper light-wrapper">
    <h1 id="header-title">{{controller}}</h1>
    <div class="container-fluid">
        <div class="row" id="refresh_album_list">
            <table class="table table-hover m-5">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Text</th>
                        <th scope="col" class="text-center">Cover</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Created at</th>
                        <th scope="col">Images</th>
                        <th scope="col">Comments</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>

                {% for album in albums %}

                    <tr>
                        <th scope="row">{{album.id}}</th>
                        <td>{{album.title}}</td>
                        <td>{{album.text}}</td>
                        <td>
                            <button type="button" class="border-0 bg-white w-50" data-toggle="modal" data-target="#exampleModal-{{ loop.index }}">
                                <img src="/uploads/images/{{album.cover}}" class="img-thumbnail rounded" alt="album cover img" width="40%" height="auto">
                             </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal-{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">{{ album.cover }}</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body bg-white">
                                            <img src="/uploads/images/{{album.cover}}"  alt="...">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{album.slug}}</td>
                        <td>{{album.createdAt|date('d/m/Y  H:i', 'Europe/Paris')}}</td>
                        <td>{{ album.images|length }}</td>
                        <td>{{ album.comments|length }}</td>
                        <td>
                            <div class="d-flex d-flex-justify-content-between">
                                <a class="btn btn-blue m-1" href="{{ path('admin_album_show', { 'id': album.id })}}">Browse</a>
                                <button class="btn btn-red m-1" type="button" onclick="deleteAlbum('{{ album.id }}')" >Delete</button>
                            </div>
                        </td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
</main>

{% endblock %}
