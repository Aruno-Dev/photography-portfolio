{% extends 'base.html.twig' %}

{% block title %}Arnaud TERRET | Dashboard{% endblock %}

{% block body %}

{% include 'includes/sidebar.html.twig' %}

    <main role="main">
        <div class="container mt-5">
        <h1>{{ album.title }}</h1><a class="btn btn-secondary m-1" href="{{ path('admin_album_choose_image', {'id': album.id})}}">Add images</a>
        <a class="btn btn-dark m-1" href="{{ path('admin_album_edit', { 'id': album.id }) }}">Edit</a>
            <div class="row mt-3">
         
               {% for image in images %}
              
                <div class="card w-25 m-4 shadow">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Title :{{ image.title }}</strong>
                         {% if album.cover == image.filename %}<span class="badge badge-primary ml-4">cover</span>{% endif %}
                          </h5>
                        <p class="card-text"><strong>Description : {{ image.text }}</strong> </p>
                        <p class="card-text"><small class="text-muted"><strong>Filename :{{ image.filename }}</strong> </small></p>
                    </div>
                    <img src="/uploads/images/{{image.Filename}} " class="card-img-top img-thumbnail " alt="...">
                    <div class="d-flex justify-content-center">
                        {% if album.cover != image.filename %}
                        <a class="btn btn-secondary m-1" href="{{ path('admin_album_set_cover', {'id': image.id})}}">Set as cover</a>
                        {% endif %}
                        <a class="btn btn-danger m-1" href="{{ path('admin_album_remove', {'id': image.id, 'album': album.id}) }}"
                        onclick="return confirm('Remove image {{ image.title }} from album {{ album.title }} ?')">Remove</a></p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
         <div class="container mt-5">
          <h1 class="h1 text-center">Associated comments</h1>
          <div class="row mt-5">
            <div class="container text-center mx-auto">
              <div class="row">
              <table class="table table-hover">
                <thead class="thead-dark text-center">
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Author</th>
                    <th scope="col">Email</th>
                    <th scope="col">PostedAt</th>
                    <th scope="col">Content</th>
                    <th scope="col">Options</th>
                  </tr>
                </thead>
                <tbody>

                {% for comment in album.comments %}

                  <tr>
                    <th scope="row">{{comment.id}}</th>
                    <td>{{comment.author}}</td>
                    <td><a href="mailto:{{comment.email}}">{{comment.email}}</a></td>
                    <td>{{comment.postedAt|date('d/m/Y  H:i', 'Europe/Paris')}}</td>
                    <td>{{comment.content}}</td>
                    <td>
                        <form  action="{{ path('admin_album_comment_delete', { 'id': comment.id }) }}" method="post">
                          <input type="hidden" name="_token" value="{{ csrf_token('secure_delete') }}"/>
                          <button class="btn btn-danger m-1" type="submit" onclick="return confirm('Are you sure ?');" >Delete</button>
                        </form>
                    </td>
                  </tr>

                  {% endfor %}

                </tbody>
              </table>
              </div>
            </div>        
          </div>
        </div>
    </main> 
  </div>
</div>

{% endblock %}